@{
}


@model IEnumerable<Ogretmen>

<h1>Öğretmen Listesi</h1>


<a asp-controller="Ogretmen" asp-action="OgretmenEkle" class="btn btn-success mt-5">Öğretmen Ekle</a>  <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-5">Ana Ekran</a>


<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Tc Kimlik</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Alan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogr in Model.OrderBy(u => u.Ad))
        {
            <tr>
                <td>@ogr.TcKimlik</td>
                <td>@ogr.Ad</td>
                <td>@ogr.Soyad</td>
                <td>@ogr.Alan</td>
                <td><a asp-controller="Ogretmen" asp-action="OgretmenDuzenle" asp-route-id="@ogr.TcKimlik" class="btn btn-sm btn-primary">Düzenle</a> <a asp-controller="Ogretmen" asp-action="OgretmenSil" asp-route-id="@ogr.TcKimlik" class="btn btn-sm btn-danger" onclick="return confirm('Emin misiniz?')">Sil</a></td>
            </tr>
        }
    </tbody>
</table>