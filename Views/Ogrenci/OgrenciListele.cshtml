@{
}

@model IEnumerable<Ogrenci>

<h1>Öğrenci Listesi</h1>


<a asp-controller="Ogrenci" asp-action="OgrenciEkle" class="btn btn-success mt-5">Öğrenci Ekle</a>  <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-5" role="button">Ana Ekran</a>


<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Numara</th>
            <th>Bölüm</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogr in Model.OrderBy(u => u.Ad))
        {
            <tr>
                <td>@ogr.Ad</td>
                <td>@ogr.Soyad</td>
                <td>@ogr.Numara</td>
                <td>@ogr.Bolum</td>
                <td><a asp-controller="Ogrenci" asp-action="OgrenciDuzenle" asp-route-id="@ogr.OgrenciId" class="btn btn-sm btn-primary">Düzenle</a> <a asp-controller="Ogrenci" asp-action="OgrenciSil" asp-route-id="@ogr.OgrenciId" class="btn btn-sm btn-danger" onclick="return confirm('Emin misiniz?')">Sil</a></td>
            </tr>
        }
    </tbody>
</table>